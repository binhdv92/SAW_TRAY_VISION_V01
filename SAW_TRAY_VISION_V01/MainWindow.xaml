            <Label Grid.Column="5" Margin="0" HorizontalAlignment="Left" Content="Ready" FontSize="15" VerticalAlignment="Bottom"/>
        </-->

        <!-- Control Dockpanel-->
        <DockPanel DockPanel.Dock="Left">
            <Button DockPanel.Dock="Bottom"  Margin="5" FontSize="26" VerticalAlignment="Top" x:Name="Btn_About" Content="About" Click="Btn_About_Click" ></Button>
            <StackPanel DockPanel.Dock="Left" Margin="5">
                <Button Grid.Row="0" Grid.Column="0" Margin="0,0,0,5" FontSize="26" VerticalAlignment="Top" x:Name="BtnHome" Content="HOME" Click="BtHome_Click" ></Button>
                <!-- Button Grid.Row="1" Grid.Column="0" Margin="0,0,0,5" FontSize="26" VerticalAlignment="Top" x:Name="BtnIO" Content="IO" Click="BtnIO_Click"></-->
                <Button Grid.Row="2" Grid.Column="0" Margin="0,0,0,5" FontSize="26" VerticalAlignment="Top" x:Name="BtnRecipe" Content="RECIPE" Click="BtnRecipe_Click"></Button>
            </StackPanel>
        </DockPanel>


        <!-- Frame_WorkPage Dockpanel-->
        <Grid DockPanel.Dock="Bottom" Margin="0,0,0,0">
            <ScrollViewer HorizontalScrollBarVisibility="Visible" >
                <Frame Margin="0,0,-10,-10" DockPanel.Dock="Top" x:Name="Frame_WorkPage" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF5B2626" Height="922" Width="1802" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True"/>
            </ScrollViewer>
        </Grid>
    </DockPanel>
